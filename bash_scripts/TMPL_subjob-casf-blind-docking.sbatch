#!/bin/bash
#
#SBATCH --job-name=t-{job_name}
#SBATCH --nodes=1
#SBATCH --gres=gpu:a100:1
#SBATCH --cpus-per-task=2
#SBATCH --time=8:00:00
#SBATCH --mem=30GB

module purge

singularity exec --nv \
            --overlay /scratch/sx801/singularity-envs/esm-gearnet-25GB-500K.ext3:ro \
            --overlay /vast/sx801/geometries/CASF-2016-cyang.sqf \
            /scratch/work/public/singularity/cuda11.6.124-cudnn8.4.0.27-devel-ubuntu20.04.4.sif \
            bash -c "source /ext3/env.sh; \
            export PYTHONPATH=.:/scratch/sx801/scripts/Mol3DGenerator; \
            python test.py --folder_names '{test_folder}' \
            --explicit_ds_config {docking_config} \
            --only_predict --use_exist --use_tqdm --compute_external_mdn "

SCREENING_CONFIG={screening_config}
if true && [[ -f "$SCREENING_CONFIG" ]]; then
  singularity exec --nv \
              --overlay /scratch/sx801/singularity-envs/esm-gearnet-25GB-500K.ext3:ro \
              --overlay /vast/sx801/geometries/CASF-2016-cyang.sqf \
              /scratch/work/public/singularity/cuda11.6.124-cudnn8.4.0.27-devel-ubuntu20.04.4.sif \
              bash -c "source /ext3/env.sh; \
            export PYTHONPATH=.:/scratch/sx801/scripts/Mol3DGenerator; \
            python test.py --folder_names '{test_folder}' \
              --explicit_ds_config {screening_config} \
              --only_predict --use_exist --use_tqdm --compute_external_mdn "
fi

